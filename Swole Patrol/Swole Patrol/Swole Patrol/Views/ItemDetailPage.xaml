<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Swole_Patrol.Views.ItemDetailPage"
             Title="{Binding Name}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Username:" TextColor="#2485B0" FontSize="Medium" />
        <Label Text="{Binding Username}" FontSize="Small"/>
        <Label Text="Password:" TextColor="#2485B0" FontSize="Medium" />
        <Label Text="{Binding Password}" FontSize="Small"/>
        <Label Text="Name:" TextColor="#2485B0" FontSize="Medium" />
        <Label Text="{Binding Name}" FontSize="Small"/>
        <Label Text="Birthday:" TextColor="#2485B0" FontSize="Medium" />
        <Label Text="{Binding Birthday}" FontSize="Small"/>
        <Label Text="Gender:" TextColor="#2485B0" FontSize="Medium" />
        <Label Text="{Binding Gender}" FontSize="Small"/>
        <Label Text="Height:" TextColor="#2485B0" FontSize="Medium" />
        <Label Text="{Binding Height, Mode=OneWay, StringFormat='{}{0:} inches'}" 
               FontSize="Small"/>
        <Label Text="Weight:" TextColor="#2485B0" FontSize="Medium" />
        <Label Text="{Binding Weight, Mode=OneWay, StringFormat='{}{0:} lbs'}" FontSize="Small"/>
        <Label Text="Email:" TextColor="#2485B0" FontSize="Medium" />
        <Label Text="{Binding Email}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>